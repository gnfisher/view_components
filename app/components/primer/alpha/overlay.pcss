.Overlay[popover] {
  border-width: 0;
  padding: 0;
  position: absolute;
}

/* stylelint-disable-next-line selector-pseudo-class-no-unknown */
.Overlay[popover]:not(:open) {
  display: none;
}

anchored-position {
  display: block;
}

/** HACKS!!! DO NOT SHIP!!! **/
.Overlay[popover].\:open [popover].\:open {
  position: fixed;
  left: 200px;
  top: 50px;
}
